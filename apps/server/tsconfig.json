{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDirs": ["./"],
    "allowJs": true,
    "outDir": "./.server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@supplemental/*": ["./src/supplemental/*"],
      "@serverTypes/*": ["./src/types/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "references": [{ "path": "../../packages/common" }],
  "files": ["./@types/index.d.ts"],
  "include": ["**/*"]
}
