{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./.build",
    "tsBuildInfoFile": "./.build/tsconfig.tsbuildinfo",
    "target": "es2016",
    "module": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./@types"],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@supplemental/*": ["./src/supplemental/*"],
      "@serverTypes/*": ["./src/types/*"]
    },
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": ["src/**/*"]
}
