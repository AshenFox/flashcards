{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDirs": [
      "./",
    ],
    "allowJs": true,
    "outDir": "./.common",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": ["./src/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "include": ["**/*"]
}