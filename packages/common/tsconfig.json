{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./.build",
    "tsBuildInfoFile": "./.build/tsconfig.tsbuildinfo",
    "target": "ES2017",
    "module": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": ["src/**/*"]
}
